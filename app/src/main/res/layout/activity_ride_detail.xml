<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    tools:context=".Activity.RideDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="Start Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/startdate"
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="Start time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/starttime"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="Start Point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/startpoint"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="End Point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/endpoint"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="Trip Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/triptype"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/totalfaretext"
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="Total Fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/totalfare"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="End Date"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/enddate"
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:textColor="@color/bleck"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="End time"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/endtime"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.hopetechno.raadarbar.Fonts.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Start Otp"
                android:textColor="@color/bleck"
                android:textSize="15dp" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/startotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="End Otp"
                android:visibility="gone"
                android:textColor="@color/bleck"
                android:textSize="15dp" />

            <com.hopetechno.raadarbar.Fonts.CTextView
                android:id="@+id/endotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/bleck"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>